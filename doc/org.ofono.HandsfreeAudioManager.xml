<node>
	<!--
		org.ofono.HandsfreeAudioManager:

		Object path: /
	-->
	<interface name="org.ofono.HandsfreeAudioManager">

		<!--
			GetCards:

			Get an array of card objects and properties
			that represent the currently attached devices.

			This method call should only be used once when an
			application starts up. Further device additions
			and removal shall be monitored via CardAdded and
			CardRemoved signals.
		-->
		<method name="GetCards">
			<arg name="cards" direction="out" type="a{oa{sv}}" />
		</method>

		<!--
			Register:

			Registers a Handsfree Audio agent with a specific
			path (freely selectable by the audio subsystem) and
			list of supported codecs.  Available codec
			identifiers:

				1	CVSD
				2	mSBC

			Possible Errors: #org.ofono.Error.InvalidArguments
					 #org.ofono.Error.InUse
		-->
		<method name="Register">
			<arg name="agent" direction="in" type="o" />
			<arg name="codecs" direction="in" type="ay" />
		</method>

		<!--
			Unregister:

			Unregisters a Handsfree Audio agent registered
			through the Register method.

			Possible Errors: #org.ofono.Error.NotFound
					 #org.ofono.Error.InvalidArguments
					 #org.ofono.Error.NotAllowed
		-->
		<method name="Unregister">
			<arg name="agent" direction="in" type="o" />
		</method>

		<!--
			CardAdded:

			Signal that is sent when a new card is added.  It
			contains the object path of new card and its
			properties.
		-->
		<signal name="CardAdded">
			<arg name="card" type="o" />
			<arg name="properties" type="a{sv}" />
		</signal>

		<!--
			CardRemoved:

			Signal that is sent when a card has been removed.
			The object path is no longer accessible after this
			signal and only emitted for reference.
		-->
		<signal name="CardRemoved">
			<arg name="card" type="o" />
		</signal>

	</interface>
</node>
