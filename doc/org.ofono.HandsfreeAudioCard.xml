<node>
	<!--
		org.ofono.HandsfreeAudioCard:

		Object path: /{device0,device1,...}
	-->
	<interface name="org.ofono.HandsfreeAudioCard">

		<!--
			Connect:

			Attempts to establish the SCO audio connection.
			The Agent NewConnection() method will be called
			whenever the SCO audio link has been established.  If
			the audio connection could not be established, this
			method will return an error.

			Possible Errors: #org.ofono.Error.InProgress
					 #org.ofono.Error.Failed
					 #org.ofono.Error.NotAvailable
					 #org.ofono.Error.NotImplemented
					 #org.ofono.Error.NotAllowed
		-->
		<method name="Connect" />

		<!--
			RemoteAddress:

			Bluetooth address of the remote peer.
		-->
		<property name="RemoteAddress" type="s" access="read" />

		<!--
			LocalAddress:

			Bluetooth address of the local adapter.
		-->
		<property name="LocalAddress" type="s" access="read" />

	</interface>
</node>
