<node>
	<!--
		org.ofono.HandsfreeAudioAgent:

		Object path: <freely defined>
	-->
	<interface name="org.ofono.HandsfreeAudioAgent">

		<!--
			NewConnection:

			Notifies the handler that a new SCO connection is
			available. Returning an error will cause oFono to
			disconnect the SCO connection.
		-->
		<method name="NewConnection">
			<arg name="card" direction="in" type="o" />
			<arg name="sco" direction="in" type="h" />
			<arg name="codec" direction="in" type="y" />
		</method>

		<!--
			Release:

			Notifies the Agent that it is no longer registered
			to oFono.
		-->
		<method name="Release" />

	</interface>
</node>
