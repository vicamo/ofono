<node>
	<!--
		org.ofono.LocationReporting:

		Object path: [variable prefix]/{modem0,modem1,...}
	-->
	<interface name="org.ofono.LocationReporting">

		<!--
			Request:

			Asks to turn ON the NMEA stream and supplies the
			gps device file descriptor. The external cliend should
			use the file descriptor to receive the NMEA data.

			Possible Errors: #org.ofono.Error.InProgress
					 #org.ofono.Error.InUse
					 #org.ofono.Error.Failed
		-->
		<method name="Request">
			<arg name="stream" direction="out" type="h" />
		</method>

		<!--
			Release:

			Releases the gps device file descriptor and turns
			OFF the NMEA stream.

			Possible Errors: #org.ofono.Error.InProgress
					 #org.ofono.Error.NotAvailable
					 #org.ofono.Error.Failed
		-->
		<method name="Release" />

		<!--
			Enabled:

			Boolean representing the state of the NMEA stream.
		-->
		<property name="Enabled" type="b" access="read" />

		<!--
			Type:

			Holds the type of the device. Currently only NMEA is
			supported.
		-->
		<property name="Type" type="s" access="read" />

	</interface>
</node>
