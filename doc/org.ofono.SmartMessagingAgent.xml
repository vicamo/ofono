<node>
	<!--
		org.ofono.SmartMessagingAgent:

		Object path: freely definable
	-->
	<interface name="org.ofono.SmartMessagingAgent">

		<!--
			ReceiveAppointment:

			Requests the agent to process a new SMS that has
			arrived containing a vCalendar object.  The info
			dictionary contains 'Sender', 'LocalSentTime' and
			'SentTime' properties.

			Possible Errors: None
		-->
		<method name="ReceiveAppointment">
			<arg name="appointment" direction="in" type="ay" />
			<arg name="info" direction="in" type="a{sv}" />
		</method>

		<!--
			ReceiveBusinessCard:

			Requests the agent to process a new SMS that has
			arrived containing a vCard object.  The info
			dictionary contains 'Sender', 'LocalSentTime' and
			'SentTime' properties.

			Possible Errors: None
		-->
		<method name="ReceiveBusinessCard">
			<arg name="card" direction="in" type="ay" />
			<arg name="info" direction="in" type="a{sv}" />
		</method>

		<!--
			Release:

			Agent is being released, possibly because of oFono
			terminating, SMS interface is being torn down or modem
			off.  No UnregisterAgent call is needed.
		-->
		<method name="Release">
			<annotation name="org.freedesktop.DBus.Method.NoReply" value="true" />
		</method>

	</interface>
</node>
